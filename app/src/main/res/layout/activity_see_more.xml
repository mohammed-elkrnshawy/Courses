<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/j"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="35dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/userName"
            android:textSize="14dp"
            android:layout_margin="10dp"
            />


    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:elevation="20dp"
        app:cardCornerRadius="30dp"
        android:layout_margin="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/image"
            />


    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:textStyle="bold"
            android:textSize="14dp"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instructor"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />



        <EditText
            android:id="@+id/instructorName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_margin="10dp"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />



        <EditText
            android:id="@+id/edtTitle"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:padding="7dp"
            android:elevation="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/desc"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />



        <EditText
            android:id="@+id/edtdesc"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:gravity="start"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />



        <EditText
            android:id="@+id/edtPrice"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />



        <EditText
            android:id="@+id/edtLocation"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />



        <EditText
            android:id="@+id/edtAdress"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />




    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />






    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_margin="8dp"
            />

        <EditText
            android:id="@+id/edtstart"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_margin="5dp"
            android:textSize="10sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_margin="8dp"
            />

        <EditText
            android:id="@+id/edtend"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_margin="5dp"
            android:textSize="10sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max"
            android:layout_margin="10dp"
            android:textStyle="bold"
            />



        <EditText
            android:id="@+id/edtattendence"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current"
            android:layout_margin="10dp"
            android:textStyle="bold"
            />



        <EditText
            android:id="@+id/edtcurrent"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:elevation="5dp"
            android:background="@drawable/shape_txt"
            android:inputType="text"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="14sp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:elevation="5dp"
            android:id="@+id/btncancel"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginStart="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_btn"
            android:text="@string/cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>



        <Button
            android:elevation="5dp"
            android:id="@+id/btncancelJoin"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginStart="50dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape_btn"
            android:text="@string/cancelJoin"
            android:textSize="12dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>







    </LinearLayout>





</LinearLayout>


</ScrollView>